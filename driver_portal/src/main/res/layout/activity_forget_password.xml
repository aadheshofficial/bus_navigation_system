<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <TextView
        android:id="@+id/forget_password_forget_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/forget_password_title"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_forget_activity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/hint_email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_forget_activity"
        app:layout_constraintStart_toStartOf="@+id/forget_password_forget_activity"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_forget_activity" />

    <Button
        android:id="@+id/send_email_forget_activity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/send_email"
        app:layout_constraintEnd_toEndOf="@+id/email_forget_activity"
        app:layout_constraintStart_toStartOf="@+id/email_forget_activity"
        app:layout_constraintTop_toBottomOf="@+id/email_forget_activity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_to_login"
        android:text="@string/back_to_login"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textSize="16sp"
        android:textColor="@color/light_blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/send_email_forget_activity"
        app:layout_constraintTop_toBottomOf="@+id/send_email_forget_activity" />


</androidx.constraintlayout.widget.ConstraintLayout>